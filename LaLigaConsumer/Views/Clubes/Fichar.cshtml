@model LaLigaConsumer.Models.JugadoresClub

@{
    ViewBag.Title = "Fichar";
}

<h2>Fichar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Jugadores</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @Html.HiddenFor(model => model.club.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.jugador.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.jugador.Id, (IEnumerable<SelectListItem>)ViewBag.JugadoresLibres, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.jugador.Id, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.salario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.salario, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "1" } })
            @Html.ValidationMessageFor(model => model.salario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
